<%# header partial to contail the website and navbar to go to different views %>
<%# Author: Mikkel Baterina %>
<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <div id="logo">Class Presentation Evaluator</div>
    <nav>
        <ul class="nav navbar-nav navbar-right">
          <!-- Check if the user is signed in -->
          <% if user_signed_in? %> <!-- Show full navbar ft. sign out tab -->
            <li><%= link_to 'Home', root_path %></li>
            <li><%= link_to 'Presentations', presentations_path %></li>
            <% if current_user.role == "teacher" %> <!-- show tabs that the teacher can access -->
              <li><%= link_to 'Manage Class', manage_users_path %></li>
            <% else %> <!-- show tabs that the student can access -->
              <li><%= link_to 'Not Evaluated', not_evaluated_presentations_path %></li>
            <% end %>
            <li><%= link_to('Sign Out', destroy_user_session_path, method: :delete) %></li>
          <% else %> <!-- only allow non-signed in users to sign in -->
            <li><%= link_to('Sign In', new_user_session_path) %></li>
          <% end %>
        </ul>
    </nav>
  </div>
</header>