<!-- Template for every page on the application -->
<!DOCTYPE html>
<html>
  <head>
    <title>Proj6Gr8</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <!-- loads command for internet explorer for compatability -->
    <%= render 'layouts/shim' %>
  </head>

  <body>
    <!-- renders the header navbar into each page -->
    <%= render 'layouts/header' %>
    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %> text-center" role="alert">
          <%= value %>
        </div>
      <% end %>
      <!-- Place for each page content -->
      <%= yield %>
    </div>
    <!-- renders the footer into each page -->
    <%= render 'layouts/footer' %>
  </body>
</html>
